<div class="row">
	<h1 class="heading">NYC Building Energy Usage Per Year <%= @years_list.first %> - <%= @years_list.last%></h1>
</div>

<div class="row">
	<%= form_tag '/filter' do %>
	  <div class="col-md-4 col-md-offset-1 col-xs-8 col-xs-offset-1">
	  	Year
	  	<%= select_tag(:year, options_for_select(@years_array)) %>
	  	<%= submit_tag "Submit", class: "btn btn-primary" %>
	  </div>
	<% end %>
</div>

<%= render "form" %>